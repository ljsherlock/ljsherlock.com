{# atoms/forms/select-menu.twig #}

{% set selectHTML %}

   {% if default %}
      {{ el.createHTMLTag( 'option', { selected: 'selected', disabled: 'disabled', value: '0' }, selectBEM, default ) }}
   {% endif %}

   {% for option in options %}
      {{ el.createHTMLTag( 'option', { value: option.value }, optionBEM, option.innerHTML ) }}
   {% endfor %}

{% endset %}

{{ el.createHTMLTag( 'select', { name, title, id }, bem, selectHTML ) }}
