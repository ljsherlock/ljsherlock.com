{#
	* @desc         Create Buttons!
	* @name         btn
	* @author       ljsherlock
	* @tested       Twig
	* @requires     component.twig, svg.twig
#}
{% set button = ( non_anchor == true ) ? 'span' : 'a' %}

{% import 'macros.twig' as mcro %}

{% set btnHTML %}

   {% if texts is defined %}
      {% for item in texts %}

         {% if item.bem %}
            {% set tmpAttributes = item.bem|merge( [ {block: 'btn', element: 'text' } ] ) %}
         {% else %}
            {% set tmpAttributes = [ {block: 'btn', element: 'text' } ] %}
         {% endif %}

         {{ mcro.createHTMLTag( 'span', item.attrs, tmpAttributes, item.text ) }}

      {% endfor %}
   {% elseif text is defined %}

      {% if text.bem %}
         {% set tmpAttributes = text.bem|merge( [ {block: 'btn', element: 'text' } ] ) %}
      {% else %}
         {% set tmpAttributes = [ {block: 'btn', element: 'text' } ] %}
      {% endif %}

      {{ mcro.createHTMLTag( 'span', text.attrs, tmpAttributes, text.value ) }}

   {% endif %}

   {% if icons is defined %}
      {% for item in icons %}

      {% include '_atoms/icon/icon.twig' with { icon: item.name, bem: item.bem } %}

      {% endfor %}
   {% elseif icon is defined %}

      {% include '_atoms/icon/icon.twig' with { icon: icon.name, bem: icon.bem } %}

   {% endif %}

   {% if rawSVG %}
      {{ rawSVG }}
   {% endif %}

{% endset %}

{{ mcro.createHTMLTag( button, attrs, bem, innerHTML ~ btnHTML ) }}
