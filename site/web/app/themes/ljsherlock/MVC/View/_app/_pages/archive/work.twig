{# _pages/archive/work.twig #}

{#
   Work Archive Page
   @param {Post Object} post
#}

{# Parameters #}
{% set archiveWorkPosts = posts ?? null %}

{# Variables #}
{% set archiveWorkBem = [{ block: 'posts', element: 'post', modifier: ['work'] }] %}
{% set archiveWorkPostsTemplate = '_molecules/work-preview/work-preview.twig' %}

{# Output #}
{% extends '_app/_templates/page.twig' %}

{% import 'macros.twig' as mcro %}

   {% block page %}

      {% include '_organisms/posts/posts.twig' with {
         posts: archiveWorkPosts,
         template: archiveWorkPostsTemplate,
         bem: archiveWorkBem
      } %}

   {% endblock %}
