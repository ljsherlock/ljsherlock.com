{# _molecules/browser-mockup/browser-mockup.twig #}

{# Parameters #}
{% set browserImageBem = bem ?? null %}
{% set browserImageAttrs = attrs ?? null %}
{% set browserImageSrc = image ?? null %}

{# Variables #}
{% set browserImageBemDefault = [{ block: 'browser-mockup', modifier: ['tab']}] %}
{# Merge default and passed bem Array #}
{% set browserImageBem = (browserImageBem) ? browserImageBem|merge(browserImageBemDefault) : browserImageBemDefault  %}

{# Output #}
{% if browserImageSrc %}

   {% import 'macros.twig' as mcro %}

   {% set browserImageHTML %}

      {{ mcro.createHTMLTag('img', { src: browserImageSrc }, [{ block:'browser-mockup', element: 'image'}], null, true ) }}

   {% endset %}

   {{ mcro.createHTMLTag('div', browserImageAttrs, browserImageBem, browserImageHTML) }}

{% endif %}
