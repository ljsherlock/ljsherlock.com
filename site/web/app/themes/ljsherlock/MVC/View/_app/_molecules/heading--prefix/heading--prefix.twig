{# _molecules/heading--prefix/heading--prefix.twig #}

{#
   Page Header
   From the menu object create a menu
   @param {Array} bem (optional)
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {Array} attrs (optional)
   {
      Mixed
   }
   @param {String} image
#}

{# Parameters #}
{% set headingAttrs = attrs ?? null %}
{% set headingBem = bem ?? null %}
{% set headingTitle = title ?? null %}

{# Variables #}
{% set headingBem = [{ block:'heading', modifier: ['prefix'] }] %}

{# Output #}
{% if headingTitle %}

   {% import 'macros.twig' as mcro %}

   {% set innerHTML %}

      {% include '_atoms/icon/icon.twig' with { icon : 'icon-' ~ icon, bem: [ { block: "symbol", modifier: [icon] } ] } %}

      {{ mcro.createHTMLTag('h1', {}, [], headingTitle) }}

   {% endset %}

   {{ mcro.createHTMLTag('div', headingAttrs, headingBem, innerHTML ) }}

{% endif %}
