{# _molecules/heading--prefix/heading--prefix.twig #}

{# Parameters #}
{% set headingTitle = title %}

{# Variables #}
{% set headingBem = [{ block:'heading', modifier: ['prefix'] }] %}

{# Output #}
{% if headingTitle %}

   {% import 'macros.twig' as mcro %}

   {% set innerHTML %}

      {% include '_atoms/icon/icon.twig' with { icon : 'icon-' ~ icon, bem: [ { block: "symbol", modifier: [icon] } ] } %}

      {{ mcro.createHTMLTag('h1', {}, [], headingTitle) }}

   {% endset %}

   {{ mcro.createHTMLTag('div', {}, headingBem, innerHTML ) }}

{% endif %}
