{% set postBem = [{ block: 'post'}] %}

{# Output #}
{% extends '_app/_templates/app.twig' %}

   {% block app %}

      {% import 'macros.twig' as mcro %}

      {% embed '_molecules/page-header/page-header.twig' with { title: post.title, subtitle: subtitle } %}
         {% block pageHeaderBefore %}
         {% import 'macros.twig' as mcro %}
            {{ mcro.createHTMLTag('datetime', {}, [], post.date|date('j F Y')) }}
         {% endblock %}
      {% endembed %}

      {% set postInnerHTML %}

         <div class="typography">

            {{ appPost.content }}

         </div>

         {% include '_organisms/terms/terms.twig' with {
            terms: appPost.terms,
            postObj: postObj,
            taxObj: taxObj
         } %}

      {% endset %}

      {{ mcro.createHTMLTag( 'div', postAttrs, postBem, postInnerHTML ) }}

   {% endblock %}
