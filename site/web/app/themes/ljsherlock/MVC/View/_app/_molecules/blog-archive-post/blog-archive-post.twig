
  <div class="articles__article grid grid--col grid--gutter-md-bottom">
        <a href="{{ post.link }}">
         <article class="post blog-post">
              <div class="grid grid--col grid--gutter-xs-bottom">
                 <div class="grid__100-of-100">
                     <h1>{{post.post_title}}</h1>
                 </div>
                 <div class="grid__100-of-100">
                     <small class="date"> {{ post.post_date|date('d M, Y') }}</small>
                 </div>
                 <div class="grid__100-of-100">
                     <p>{{post.post_content[:250] ~ '...'}}</p>
                 </div>
              </div>
         </article>
      </a>
      <hr class="break-line"/>
  </div>
