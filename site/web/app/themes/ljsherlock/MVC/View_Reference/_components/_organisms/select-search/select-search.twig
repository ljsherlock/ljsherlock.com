

{% include 'component.twig' with { el: 'h4' } %}

{% embed 'component.twig' with { el: 'form' bem: [{block:'member-search'}], attrs: [ { method: 'post', name: 'name', id: 'name', action: 'to' } ] } %}
   {% block component %}

      {% embed 'grid.twig' with { bem: [{ block: 'grid', modifier: [ 'row', 'gutter-sm-right' ] }] } %}
            {% block grid %}

               {% embed 'component.twig' with { el: 'div' bem: [{block:'grid', element: '70-of-100'}] } %}
                  {% block component %}
                     {% include 'interface/custom-select.twig' %}
                  {% endblock %}
               {% endembed %}

               {% embed 'component.twig' with { el: 'div' bem: [{block:'grid', element: '30-of-100'}] } %}
                  {% block component %}
                     {% include 'interface/input.twig' with { input_name: 'search-by', input_type: 'hidden', input_value: loop_index } %}
                     {% include 'interface/input.twig' with {
                     bem : [
                        { block: 'btn', modifier: ['regular', 'wide', 'danube'] }
                     ], input_type: 'submit', input_title: 'Search', input_name: 'search' } %}
                  {% endblock %}
               {% endembed %}

            {% endblock %}
       {% endembed %}

   {% endblock %}
{% endembed %}
