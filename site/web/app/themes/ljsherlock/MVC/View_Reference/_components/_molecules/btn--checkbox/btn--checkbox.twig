{#
	* @desc         Button connected to a checkbox!
	* @name         Checkbox Button
	* @author       ljsherlock
	* @tested       Twig
	* @requires     component.twig
#}

{% include 'component.twig' with { el: 'input', bem: bem__input,  attrs: { type: 'checkbox', id: name } } %}

{% embed 'component.twig' with { el: 'label', bem: bem__label, attrs: { for: name } } %}
	{% block component %}
		{% block label %}
			
		{% endblock %}
	{% endblock %}
{% endembed %}
