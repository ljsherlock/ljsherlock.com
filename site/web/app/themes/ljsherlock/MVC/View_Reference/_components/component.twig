{#
	* @desc         Create elements!
	* @name         Component
	* @author       ljsherlock
	* @tested       Twig
	* @requires     bem.twig, attrs.twig
#}

{% if bem is defined %}
   {% import 'bem.twig' as bemify %}
   {% set class = bemify.bem(bem) %}
{% endif %}

{% if attrs is defined %}
   {% import 'attrs.twig' as attrfy %}
   {% set attrs_str = attrfy.attrs(attrs) %}
{% endif %}

<{{el}} class="{{el}}{{class ? class :''}}" {{attrs_str}} {{selfclose == true ? '/' : ''}}>
   {% block component %}
      {{text}}
   {% endblock %}
{% if selfclose != true or noclose == true %}
   </{{el}}>
{% endif %}
