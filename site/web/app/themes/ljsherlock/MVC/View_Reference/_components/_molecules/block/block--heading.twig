{#
	* @desc         Create grids!
	* @name         Grid
	* @author       ljsherlock
	* @tested       Twig
	* @requires     component.twig
#}

{% embed 'block.twig' %}
   {% block _block %}

      {% embed 'component.twig' with { bem : [
         { block: 'grid-desktop', modifier: [ 'row', 'gutter-rg-right' ] }
         { block: 'grid-tablet', modifier: [ 'row', 'gutter-rg-right' ] }
         { block: 'grid-mobile', modifier: [ 'col', 'gutter-rg-bottom' ] }
      ] } %}
         {% block component %}
            {% block grid %}

               {% include 'component.twig' with { el:'div' bem : [
                  { block: 'grid-desktop', element: '__100-of-100' }
                  { block: 'grid-tablet', element: '__100-of-100' }
                  { block: 'grid-mobile', element: '__100-of-100' }
               ] } %}

            {% endblock %}
         {% endblock %}
      {% endembed %}

   {% endblock %}
{% endembed %}
