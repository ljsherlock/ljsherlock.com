{#
	* @desc         create a video element with sources
	* @name         Video
	* @author       ljsherlock
	* @tested       Twig
	* @requires     component.twig
#}


{% embed 'component.twig' with {el: 'video', attrs: attrs|default( { controls: '', autoplay: '' } )  } %}
   {% block component %}
      {% for item in sources|default([{ src: 'https://vimeo.com/208295513'}]) %}

         {% include 'component.twig' with { el:'source', attrs: {type: item.type, src: item.src} } %}

      {% endfor %}

      {{'Sorry your browser does not support HTML5 video'}}

   {% endblock %}
{% endembed %}
