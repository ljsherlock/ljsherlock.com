{# list.twig #}

{% import 'bem.twig' as bemify %}
{% set classname = bemify.bem(bem) %}
{% set classname_item = bemify.bem(bem_item) %}


<div class="grid grid--col  {{classname}}">
   {% for item in items %}

      <div class="grid__100-of-100">
         {% block list__item %}
            {{attribute(item, attribute)}}
         {% endblock %}
      </div>

   {% endfor %}
</div>
