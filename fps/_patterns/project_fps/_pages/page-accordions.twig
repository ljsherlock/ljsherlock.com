
{% extends 'project_fps/_templates/tmpl--regular-page.twig' %}

{% block content %}

   {% include 'project_fps/_molecules/content/block--content-headline.twig' %}

   {% for section in fields.accordion_sections %}

      <div class="grid grid--col grid--gutter grid--gutter-lg-bottom">
         <div class="grid__100-of-100">
            <div class="content content--{{section.theme}}">
               {% include '_atoms/content/heading.twig' with {size: 'h3', heading: section.section_title} %}
            </div>

            {% for accordion in section.accordions_accordion %}

               <div class="grid grid--col grid--gutter grid--gutter-sm-bottom">
                  {% embed '_molecules/interface/accordion.twig' with { bem: [ {block: 'accordion--grey'} ], anchor_text: accordion.title } %}

                     {% block accordion__button %}
                        {% embed '_atoms/interface/button.twig' with {
                           bem: [
                              { block: 'btn', modifier: ['regular', 'wide', 'text', 'content', 'padded'] },
                              { block: 'accordion', element: 'button' }
                           ],
                           anchor_link: '#accordion' ~ loop.index,
                           icon: 'icon-plus',
                           secondary_icon: 'icon-minus',
                           icon_bem: [{ block: 'accordion__plus' }],
                           icon_2_bem: [{ block: 'accordion__minus' }] } %}
                           {% block btn_block %}
                              <h5>{{anchor_text}}</h5>
                           {% endblock %}
                        {% endembed %}
                     {% endblock %}

                     {% block accordion__content %}
                        {% embed '_molecules/content/block.twig' with { bem: [ {block: 'content', modifier: [section.theme] } ] } %}
                           {% block body %}
                              {{accordion.content}}

                           {% endblock %}
                        {% endembed %}
                     {% endblock %}
                  {% endembed %}
               </div>

            {% endfor %}
         </div>
      </div>

   {% endfor %}

{% endblock %}
