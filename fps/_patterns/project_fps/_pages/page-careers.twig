{% extends 'project_fps/_templates/tmpl--regular-page.twig' %}

{% block content %}

   {% include 'project_fps/_molecules/content/block--content-headline.twig' %}
   <div class="post">
      <div class="grid grid--col grid--gutter grid--gutter-lg-bottom">
         <div class="grid__100-of-100">
            <div class="post-content post-content--{{post.slug}}">
               {{post.content}}
            </div>
         </div>
         <div class="grid__100-of-100">

            <div class="grid grid--col grid--gutter grid--gutter-rg-bottom">
               <div class="grid__100-of-100">

                  <div class="grid-desktop grid-desktop--row grid--gutter grid-desktop--gutter-rg-right
                  grid-tablet grid-tablet--row grid--gutter grid-tablet--gutter-rg-right
                  grid-mobile grid-mobile--col grid--gutter grid-mobile--gutter-rg-bottom">
                     <div class="grid-desktop__50-of-100 grid-tablet__50-of-100 grid-mobile__100-of-100">
                        {{careers_1}}
                     </div>
                     <div class="grid-desktop__50-of-100 grid-tablet__50-of-100 grid-mobile__100-of-100">
                        {{careers_2}}
                     </div>
                  </div>

               </div>
               <div class="grid__100-of-100">

                  <div class="grid-desktop grid-desktop--row grid--gutter grid-desktop--gutter-rg-right
                  grid-tablet grid-tablet--row grid--gutter grid-tablet--gutter-rg-right
                  grid-mobile grid-mobile--col grid--gutter grid-mobile--gutter-rg-bottom">
                     <div class="grid-desktop__50-of-100 grid-tablet__50-of-100 grid-mobile__100-of-100">
                        {{careers_3}}
                     </div>
                     <div class="grid-desktop__50-of-100 grid-tablet__50-of-100 grid-mobile__100-of-100">
                        {{careers_4}}
                     </div>
                  </div>

               </div>
            </div>

         </div>
      </div>
   </div>

{% endblock %}
