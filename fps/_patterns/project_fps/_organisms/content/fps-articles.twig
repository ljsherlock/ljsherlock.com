{% for item in articles %}

   {% if loop.index is odd %}

      <div class="grid grid--row grid--gutter grid--gutter-xlg-bottom ">
         <div class="grid__100-of-100">
            <div class="grid-desktop grid-desktop--row grid--gutter grid-desktop--gutter-xlg-right grid-tablet grid-tablet--row grid--gutter grid-tablet--gutter-xlg-right grid-mobile grid-mobile--col grid--gutter grid-mobile--gutter-xlg-bottom">

   {% endif %}

         <div class="grid-desktop__50-of-100 grid-tablet__50-of-100 grid-mobile__100-of-100">
            {% include '_molecules/content/block--content.twig' with {
             style : 'background-image: url(' ~ attribute( options.post_background.sizes, 'tile-' ~ device ) ~ ');',
             content: item.post_content|excerpt(30),
             heading: item.post_title,
             date: item.post_date|date('jS M Y'),
             anchor_link: item.link,
             anchor_text: 'read full story'
             } %}
         </div>

   {% if loop.index is even %}
            </div>
         </div>
      </div>
   {% endif %}

{% endfor %}
