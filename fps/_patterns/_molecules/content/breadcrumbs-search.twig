{# size #}

<div class="grid-desktop grid-desktop--row grid--gutter grid-desktop--gutter-rg-right
grid-tablet grid-tablet--row grid--gutter grid-tablet--gutter-rg-right
grid-mobile grid-mobile--col grid--gutter grid-mobile--gutter-rg-bottom flex--just-space-between">
   <div class="grid-desktop__50-of-100">
      {% if breadcrumbs %}
         {% include '_organisms/interface/breadcrumbs.twig' %}
      {% endif %}
   </div>
   <div class="grid-desktop__50-of-100 flex flex--just-end">
      {% include '_molecules/interface/search.twig' with {
         action: '/members-area/search-documents',
         bem: [
            { block: 'search', modifier: ['site', 'small', 'light'] }
         ],
         size: 'small',
         placeholder: 'Search documents',
         id: 'docs_search'
      } %}
   </div>
</div>
