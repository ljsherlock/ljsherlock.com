{% import 'bem.twig' as bemify %}
{% set classname = bemify.bem(bem) %}

<span class="{{classname}} {% if constant('_MUSTARD') != true %} search--show {% endif %}" id="search--site">
   <div class="grid grid--row">
      <div class="search__icon">
        {% include '_atoms/interface/button.twig' with {
            bem: [
               {block: 'btn', modifier: ['icon-before', size, 'regular'] },
               {block: 'search', element: 'btn' }
            ],
            id : 'search',
            anchor_text: 'search',
            anchor_link: '#',
            icon: 'icon-search'
         } %}
      </div>
      <div class="search__input">
         <form id="search__form" method="post" action="{{action}}">
            <input name="term" placeholder="{{placeholder}}" class="search__field input--{{size}}" type="text"/>
         </form>
      </div>
   </div>
   <div class="search__results" id="search__results"></div>
</span>
