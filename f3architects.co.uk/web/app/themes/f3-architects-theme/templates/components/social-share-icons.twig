{# base/components/social-icons.twig #}

{#
   Social Icons
   Use an array of icons and links to create an icon menu
   @param {Array} bem (optional)
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {Array} attrs (optional)
   {
      Mixed
   }
   @param {Array} icons
      {
         icon {String}
         link {String}
      }
#}

{# Parameters #}
{% set navAttrs = attrs ?? null %}
{% set navBem = bem ?? null %}
{% set socialIconsUrl = link %}
{% set socialIconsText = text %}
{% set socialIconsBem = bem ?? null %}
{% set socialIconsBemDefault = [{ block: 'nav', modifier: ['social-media'] }] %}

{# Variables #}
{% set socialIconsBem = (socialIconsBem) ? socialIconsBem|merge( socialIconsBemDefault ) : socialIconsBemDefault %}
{% set socialIconsArray = [ { title: 'Share', link: '#share', element: 'a', bem: [{ block: 'a h5' }] },
  {icon: 'icon-facebook', link: 'https://www.facebook.com/sharer/sharer.php?u=' ~ socialIconsUrl },
  { icon: 'icon-twitter', link: 'https://twitter.com/intent/tweet/?text=' ~ socialIconsText ~ '&url=' ~ socialIconsUrl },
  { icon: 'icon-linkedin', link : 'https://www.linkedin.com/shareArticle?mini=true&url=' ~ socialIconsUrl ~ '&title=' ~ socialIconsText ~'&summary='  ~ socialIconsText ~ '&source=' ~ socialIconsUrl },
 { icon: 'icon-email', link: 'mailto:?subject=' ~ socialIconsText ~ '&amp;body=' ~ socialIconsUrl } ]  %}



{# Output #}
{% if socialIconsArray %}

   {% import 'macros.twig' as mcro %}

   {% include 'components/menu.twig' with { menu: socialIconsArray, bem: socialIconsBem } %}

{% endif %}
