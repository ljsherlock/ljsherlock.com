{# components/page-header.twig #}

{#
   Page Header
   @param {Array} bem (optional)
      {
         block {String}
         element {String}
         modifier {Array}
      }
   @param {Array} attrs (optional)
   {
      Mixed
   }
   @param {String} title
   @param {String} content (optional)
#}

{# Parameters #}

{% set pageHeaderBem = bem ?? null %}
{% set pageHeaderAttrs = attrs ?? null %}
{% set pageHeaderTitle = title %}
{% set pageHeaderContent = content ?? null %}

{# Variables #}
{% set pageHeaderBemDefault = [{ block : 'page-header'}] %}
{% set pageHeaderBem = (pageHeaderBem) ? pageHeaderBem|merge(pageHeaderBemDefault) : pageHeaderBemDefault %}

{# Output #}
{% if pageHeaderTitle %}

  {% include 'components/post-header.twig' with { bem: pageHeaderBem, title: pageHeaderTitle, content: pageHeaderContent } %}

{% endif %}
